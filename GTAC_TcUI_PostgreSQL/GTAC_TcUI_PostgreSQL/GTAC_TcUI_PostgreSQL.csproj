<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<AssemblyName>GTAC_TcUI_PostgreSQL</AssemblyName>
	</PropertyGroup>

	<PropertyGroup>
		<Company>Sodecia GTAC</Company>
		<Description>TcHmi Server Extension for interacting with PostgreSQL Database</Description>
		<Copyright>Copyright © 2022-2025 Brent Lekx-Toniolo, Chris Drees (test)</Copyright>
	</PropertyGroup>

	<PropertyGroup>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	</PropertyGroup>

	<PropertyGroup>
		<TcHmiExtensionTypes>{165402F8-2FAD-480A-BCE3-D718A6135931}</TcHmiExtensionTypes>
	</PropertyGroup>

	<PropertyGroup>
		<TcHmiServerApiVersionNumberMajor>1</TcHmiServerApiVersionNumberMajor>
	</PropertyGroup>

	<PropertyGroup>
		<TcHmiInstallDir>$(registry:HKEY_CURRENT_USER\Software\Beckhoff\TwinCAT3\3.1@InstallDir)</TcHmiInstallDir>
		<TcHmiInstallDir Condition="'$(TcHmiInstallDir)'==''">$(registry:HKEY_LOCAL_MACHINE\Software\Beckhoff\TwinCAT3\3.1@InstallDir)</TcHmiInstallDir>
		<TcHmiInstallDir Condition="'$(TcHmiInstallDir)'==''">$(registry:HKEY_LOCAL_MACHINE\Software\Wow6432Node\Beckhoff\TwinCAT3\3.1@InstallDir)</TcHmiInstallDir>
		<TcHmiEgineeringDir>$(TcHmiInstallDir)..\Functions\TE2000-HMI-Engineering</TcHmiEgineeringDir>
		<TcHmiMsBuildPath Condition="'$(TcHmiMsBuildPath)' == ''">$(TcHmiEgineeringDir)\MSBuild\</TcHmiMsBuildPath>
	</PropertyGroup>

	<Import Project="$(TWINCAT3DIR)..\Functions\TE2000-HMI-Engineering\Infrastructure\TcHmiServer\imports\TcHmiServerExtensionCSharp.proj" />

	<PropertyGroup>
		<DefaultItemExcludes>$(DefaultItemExcludes);___initialBuild_of_this_extension.tmp</DefaultItemExcludes>
	</PropertyGroup>

	<PropertyGroup>
		<ProjectGuid>a4eb6faa-95b3-4040-ae2f-922fa9c4eed1</ProjectGuid>
		<Version>1.12.760.5909</Version>
		<PackageIcon></PackageIcon>
		<AssemblyVersion>1.12.760.5909</AssemblyVersion>
		<FileVersion>1.12.760.5909</FileVersion>
		<PackageReleaseNotes>Uprev to NPGSQL 9.0.3</PackageReleaseNotes>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<Authors>Brent Lekx-Toniolo, Chris Drees (test)</Authors>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageProjectUrl>https://github.com/Sodecia-GTAC/TcUI-Extensions</PackageProjectUrl>
		<PackageTags>TwinCAT HMI Server, TcHmi, TcUI, PostgreSQL, Database, GTAC</PackageTags>
		<ApplicationIcon>logo.ico</ApplicationIcon>
	</PropertyGroup>

  <ItemGroup>
    <Content Include="logo.ico">
      <Pack>Pack</Pack>
    </Content>
    <Content Include="images\logo.png">
      <Pack>Pack</Pack>
    </Content>
  </ItemGroup>



  <ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
	  <PackageReference Include="Npgsql" Version="9.0.3" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="LICENSE.txt">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	</ItemGroup>

  <ItemGroup>

    <Content Include="bin\Debug\**\GTAC_TcUI_PostgreSQL.*.json" Pack="True" PackakgePath="contentFiles\runtimes\any\native">
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
    <Content Include="bin\Debug\**\GTAC_TcUI_PostgreSQL.dll" Pack="True" PackagePath="contentFiles\runtimes\any\native">
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
    <Content Include="bin\Debug\**\Npgsql.dll" Pack="True" PackakgePath="contentFiles\runtimes\any\native">
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
    <Content Include="bin\Debug\**\Microsoft.Extensions.Logging.Abstractions.dll" Pack="True" PackakgePath="contentFiles\runtimes\any\native">
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>

  </ItemGroup>


</Project>